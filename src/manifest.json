{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://leopoldthecoder.github.io/doctor-jones/",
  "description": "中文排版格式化工具",
  "default_locale": "zh_CN",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": false
    },
  "content_scripts":[{
    "matches":[
      "<all_urls>"
    ],
    "js":["content.js"]
  }],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
